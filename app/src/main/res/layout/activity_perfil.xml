<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNombreCompleto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:text="GIANCARLO CHÁVEZ ARQQUE"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/txtNombrePrefil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_cuadro_texto"
            android:drawableLeft="@drawable/icono_usuario"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Nombres"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <EditText
            android:id="@+id/txtApePaternoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_cuadro_texto"
            android:drawableLeft="@drawable/icono_letra_a"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Apellido Paterno"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <EditText
            android:id="@+id/txtApeMaternoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_cuadro_texto"
            android:drawableLeft="@drawable/icono_letra_a"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Apellido Materno"
            android:inputType="textPersonName"
            android:padding="10sp" />

        <EditText
            android:id="@+id/txtCorreoElectronicoPerfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20sp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/shape_cuadro_texto"
            android:drawableLeft="@drawable/icono_calendario"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="10sp" />

        <Button
            android:id="@+id/btnGuardarPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/teal_700"
            android:text="Guardar"
            android:textColor="@color/white" />


    </LinearLayout>
</FrameLayout>